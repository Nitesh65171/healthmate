<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer glow / lighter ring -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#FFF2C2C2"/> <!-- very light red edge -->
        </shape>
    </item>

    <!-- Main gradient circle -->
    <item
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp">
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="150dp"
                android:centerColor="#E53935"
                android:startColor="#FFCDD2"
                android:endColor="#B71C1C"
                android:centerX="0.5"
                android:centerY="0.5" />
            <stroke android:width="2dp" android:color="#FFD6D6D6"/>
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp"/>
        </shape>
    </item>

    <!-- Optional subtle inner highlight for glossy effect -->
    <item
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="60dp">
        <shape android:shape="oval">
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="#33FFFFFF"
                android:endColor="#00FFFFFF"/>
        </shape>
    </item>

</layer-list>
